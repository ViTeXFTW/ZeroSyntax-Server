{
	"name": "zs-server",
	"displayName": "ZeroSyntax-Server",
	"description": "Language server for Generals Zero Hour INI files",
	"icon": "./images/icon.png",
	"version": "0.1.0",
	"publisher": "ViTeXFTW",
	"author": {
		"name": "ViTeXFTW",
		"email": "vitexftw@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ViTeXFTW/ZeroSyntax-Server"
	},
	"license": "MIT",
	"categories": [
		"Formatters",
		"Programming Languages"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.85.0"
	},
	"activationEvents": [
		"onLanguage:ini"
	],
	"main": "./client/out/extension",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "zerosyntax",
					"title": "ZeroSyntax",
					"icon": "images/ZeroSyntaxLogo_bw.png"
				}
			]
		},
		"views": {
			"explorer": [
				{
					"id": "package-dependencies",
					"name": "Dependencies",
					"type": "tree"
				}
			]
		},
		"commands": [
			{
				"command": "ZeroSyntax.stopLanguageServer",
				"title": "ZeroSyntax: Turn Off Language Server"
			},
			{
				"command": "ZeroSyntax.startLanguageServer",
				"title": "ZeroSyntax: Turn On Language Server"
			}
		],
		"configuration": {
			"type": "object",
			"title": "ZeroSyntax Settings",
			"properties": {
				"ZeroSyntax.forceAddModule": {
					"type": "boolean",
					"default": true,
					"description": "Controls if modules is required to be inside AddModule & ReplaceModule blocks"
				},
				"ZeroSyntax.indentNumber": {
					"type": "number",
					"default": 2,
					"description": "Controls the indentation when using the INI formatter"
				},
				"ZeroSyntax.serverStartupSetting": {
					"type": "boolean",
					"default": false,
					"description": "Controls whether the server is started automatically after the extension is activated."
				},
				"ZeroSyntax.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"ZeroSyntax.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"clean:client": "rimraf ./client/out",
		"clean:server": "rimraf ./server/out",
		"compile": "tsc -b",
		"watch": "tsc -w -p ./",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "vscode-test --timeout=5000",
		"antlr4ts": "antlr4ts -visitor ./server/src/utils/antlr/MapIni.g4 -o ./server/src/utils/antlr/"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.18.34",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"eslint": "^8.35.0",
		"rimraf": "^6.0.1",
		"stack-typescript": "^1.0.4",
		"typescript": "^5.3.2",
		"vscode-test": "^1.6.1"
	},
	"dependencies": {
		"antlr4ts": "^0.5.0-alpha.4",
		"antlr4ts-cli": "^0.5.0-alpha.4",
		"glob": "^11.0.0",
		"mocha": "^10.7.0"
	}
}
